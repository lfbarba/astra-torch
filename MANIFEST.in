include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include SECURITY.md

# Documentation
recursive-include docs *.md *.rst *.py *.txt
recursive-include docs/api *.md
prune docs/_build

# Examples
recursive-include examples *.py *.ipynb *.md

# Tests
recursive-include tests *.py

# Configuration files
include .flake8
include mypy.ini
include pytest.ini
include .pre-commit-config.yaml

# Exclude development/build artifacts
prune .git
prune .github
prune __pycache__
prune *.egg-info
prune build
prune dist
prune .pytest_cache
prune .mypy_cache
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude .DS_Store
